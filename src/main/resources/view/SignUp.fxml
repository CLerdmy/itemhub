<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.control.Hyperlink?>
<VBox alignment="CENTER" prefHeight="337.0" prefWidth="312.0" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22.0.1" fx:controller="dev.clerdmy.itemhub.ui.controllers.SignUpController">

    <stylesheets>
        <URL value="@css/Authentication.css" />
    </stylesheets>

    <Region VBox.vgrow="ALWAYS" />
    <Label alignment="CENTER" prefHeight="35.0" prefWidth="130.0" text="ItemHub" styleClass="title-label"/>

    <Region prefHeight="30.0" />
    <Label fx:id="hint" alignment="CENTER" prefHeight="35.0" prefWidth="130.0" styleClass="hint-label"/>
    <TextField fx:id="usernameField" pickOnBounds="false" prefHeight="30.0" prefWidth="250.0" promptText="Name" />
    <TextField fx:id="emailField" pickOnBounds="false" prefHeight="30.0" prefWidth="250.0" promptText="Email" />
    <PasswordField fx:id="passwordField" prefHeight="30.0" prefWidth="250.0" promptText="Password" />
    <PasswordField fx:id="confirmPasswordField" prefHeight="30.0" prefWidth="250.0" promptText="Confirm Password" />
    <Button mnemonicParsing="false" onAction="#onSignUp" prefHeight="30.0" prefWidth="250.0" text="Sign Up" />
    <Hyperlink text="Already have an account? Sign In" onAction="#onHyperLink" />
    <Region VBox.vgrow="ALWAYS" />

</VBox>